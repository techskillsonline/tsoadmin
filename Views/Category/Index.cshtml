@model IEnumerable<Category>

<div class="row">
            <div class="col-lg-12 col-md-12">
              <div class="card">
                <div class="card-header card-header-tabs card-header-primary">
                  <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                    
                        <h4 class="card-title">Categories Grid</h4>
                        <p class="card-category">Perform CRUD Operations on Categories</p>
                        <hr/>
                      
                      <span class="nav-tabs-title">Actions:</span>
                      <ul class="nav nav-tabs" data-tabs="tabs">
                        <li class="nav-item">
                          <a class="nav-link active" asp-controller="Category" asp-action="Add">
                            <i class="material-icons">bug_report</i> Add
                            <div class="ripple-container"></div>
                          </a>
                        </li>
                        @* <li class="nav-item">
                          <a class="nav-link" asp-controller="Category" asp-action="Edit">
                            <i class="material-icons">code</i> Edit
                            <div class="ripple-container"></div>
                          </a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Category" asp-action="Remove">
                            <i class="material-icons">cloud</i> Remove
                            <div class="ripple-container"></div>
                          </a>
                        </li> *@
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <div class="tab-content">
                    <div class="tab-pane active" id="profile">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>Id</th>
                            <th>Category Name</th>
                            <th>Parent Category</th>
                            <th>Created By</th>
                            <th>Created Date</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          @foreach(Category cat in Model)
                          {
                          <tr>
                            <td>
                              <div class="form-check">
                                @* <label class="form-check-label">
                                  <input class="form-check-input" type="checkbox" value="">
                                  <span class="form-check-sign">
                                    <span class="check"></span>
                                  </span>
                                </label> *@
                                @cat.Id
                              </div>
                            </td>
                            <td>@cat.CategoryName</td>
                            <td>
                              @if(cat.ParentCategoryId != null && cat.ParentCategoryId > 0)
                              {
                                  @cat.ParentCategory.CategoryName
                              }
                            </td>
                            <td>@cat.CreatedBy</td>
                            <td>@cat.CreatedDate</td>
                            <td class="td-actions text-right">
                              <a rel="tooltip" title="Edit Task" class="btn btn-primary btn-link btn-sm" asp-controller="Category" asp-action="Edit" asp-route-Id="@cat.Id">
                                <i class="material-icons">edit</i>
                              </a>
                              <a rel="tooltip" title="Remove" class="btn btn-danger btn-link btn-sm" asp-controller="Category" asp-action="Delete" asp-route-Id="@cat.Id">
                                <i class="material-icons">close</i>
                              </a>
                            </td>
                          </tr>
                          }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

